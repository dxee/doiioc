{
  "private": true,
  "name": "doiioc",
  "version": "1.0.0",
  "scripts": {
    "publish-ci": "lerna publish -y --canary --preid ci --npm-tag=ci",
    "publish": "lerna publish"
  },
  "workspaces": [
    "packages/*",
    "www"
  ],
  "dependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,mdx}": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  }
}
