{
  "name": "doiioc",
  "private": true,
  "workspaces": [
    "packages/*",
    "www"
  ],
  "scripts": {
    "prettier": "prettier --config .prettierrc --ignore-path .prettierignore --write \"**/*.js\"",
    "prettier:diff": "prettier --config .prettierrc --list-different \"**/*.js\"",
    "lerna": "lerna"
  },
  "devDependencies": {
    "husky": "^2.2.0",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "yarn prettier",
        "git add"
      ],
      "*.{md,scss,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}